{% extends 'admin.layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ assets('/assets/css/admin/chantiers/updatePhoto.css') }}">
{% endblock %}

{% block title %}
    <title>Nos chantiers</title>
{% endblock %}

{% block body %}
    <a href="{{path('adminChantiers')}}" id="retour"><img src="{{ assets('/assets/imgs/icone/left-arrow.png') }}" alt="flèche retour"> Retour aux chantiers</a>

    <h1>Modifier mon image</h1>
    <div>
        <img src="{{assets('/assets/imgs/chantiers/'~photo.imgPath()) }}">
        <p>{{photo.descImg}}</p>
    </div>

    <p>Les images doivent être de type png, jpeg ou jpg et d'une taille maximale de 2MO.</p>
    
    <form method="POST" enctype="multipart/form-data">
        <label for="txt">Ajouter la description :</label>
        <textarea name="txt" maxlength="210" rows="5">{{photo.descImg}}</textarea>
        <input type="submit">
    </form>
    

{% endblock %}