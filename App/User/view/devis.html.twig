{% extends 'layout.html.twig' %}

{% block meta %}
    <meta name="description" content="Vous êtes intéressé par nos services ? Vous pouvez à tout moment réaliser un devis en ligne, après étude de votre dossier, un commercial vous accompagneras dans la suite des démarches.">
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ assets('/assets/css/user/devis/devis.css') }}">
    <link rel="stylesheet" href="{{ assets('/assets/css/user/devis/devis1.css') }}">
    <link rel="stylesheet" href="{{ assets('/assets/css/user/devis/devis2.css') }}">

{% endblock %}

{% block title %}
    <title>{{siteName}} ~ Devis en ligne</title>
{% endblock %}

{% block body %}
    <div id="swipe">
        <section class="chemin">
            <div class="trait"></div>
            <div class="pts1 bigger"></div>
            <h1>Mon bien</h1>
            <div class="pts2"></div>
            <h2>Ma rénovation</h2>
            <div class="pts3"></div>
            <h2>Mon projet</h2>
            <div class="pts4"></div>
            <h2>Mes coordonnées</h2>
        </section>


        <section id="p1" class="left0">
                <h3>Je souhaite rénover :</h3>
                <div id="Q1">
                    <p class="choix"><img src="{{ assets('/assets/imgs/icone/devis/app.png') }}" alt="Image d'un appartement"><span class="R">Un appartement</span></p>
                    
                        
                    <p class="choix"><img src="{{ assets('/assets/imgs/icone/devis/home.png') }}" alt="Image d'une maison"><span class="R">Une maison</span></p>
                    
                        
                    <p class="choix"><img src="{{ assets('/assets/imgs/icone/devis/tipi.png') }}" alt="Image d'un tipi"><span class="R">Autre</span></p>
                </div>
                <button type="button" class="suivant" id="s1" onclick="swip()">Suivant</button>
        </section>

        <section id="p2" class="left">
                <h3>De quoi pensez vous avoir besoin?</h3>
                <div id="grid">
                    <p><img src="{{ assets('/assets/imgs/icone/devis/roul.png') }}" alt="Image d'un rouleau à peinture" class="tooMuch"><span class="R2">Revêtements sols et murs</span></p>
                    <p ><img src="{{ assets('/assets/imgs/icone/devis/fenetre.png') }}" alt="Image d'une fenêtre"><span class="R2">Menuiseries</span></p>
                    <p><img src="{{ assets('/assets/imgs/icone/devis/maisFroid.png') }}" alt="Image d'une maison avec une écharpe"><span class="R2">Isolation</span></p>
                    <p><img src="{{ assets('/assets/imgs/icone/devis/toit.png') }}" alt="Image d'une maison avec un toit en construction"><span class="R2">Toiture</span></p>
                    <p><img src="{{ assets('/assets/imgs/icone/devis/mur.png') }}" alt="Image d'un mur en construction" class="tooMuch"><span class="R2">Travaux de construction</span></p>
                    <p><img src="{{ assets('/assets/imgs/icone/devis/sdb.png') }}" alt="Image d'une salle de bain"><span class="R2">Salle de bain</span></p>
                    <p><img src="{{ assets('/assets/imgs/icone/devis/jardin.png') }}" alt="Image d'un jardin"><span class="R2">Extérieur</span></p>
                    <p><img src="{{ assets('/assets/imgs/icone/devis/cuisine.png') }}" alt="Image d'une cuisine"><span class="R2">Cuisine</span></p>
                </div>
                <p id="g1"><img src="{{ assets('/assets/imgs/icone/devis/outils.png') }}" alt="Image d'outils"><span class="R2">Autre</span></p>
                <button type="button" class="preced" id="pre2" onclick="swi()">Précédent</button>
                <button type="button" class="suivant" id="s2" onclick="swipo()">Suivant</button>
        </section>

        <section id="p3" class="left">
            <h3>Décrivez-nous votre projet :</h3>
            <textarea id="descriptionProjet" name="descriptionProjet" rows="9" cols="50"></textarea>


            <button type="button" class="preced" id="pre3" onclick="sw()">Précédent</button>
            <button type="button" class="suivant" id="s3" onclick="swopo()">Suivant</button>

        </section>
        <section id="p4" class="left">

            <form action="#" method="POST">
                <input type="text" id="nom" name="nom" required="required">
                <label for="nom" id="labNom">Votre nom : <span class="red">*</span></label>
                <i id="iNom"></i>
    
                <input type="text" id="prenom" name="prenom" required="required">
                <label for="prenom" id="labPrenom">Votre prénom : <span class="red">*</span></label>
                <i id="iPrenom"></i>
    
                <input type="text" id="mail" name="mail" required="required">
                <label for="mail" id="labMail">Votre adresse mail : <span class="red">*</span></label>
                <i id="iMail"></i>
    
                <input type="text" id="tel" name="tel" required="required">
                <label for="tel" id="labTel">Votre numéro de téléphone : <span class="red">*</span></label>
                <i id="iTel"></i>

                <input type="hidden" id="sujet" name="sujet">

                

                <div class="g-recaptcha" data-sitekey="6LfpX-ckAAAAAFgQUFqEEzZe9E2TlH_jFr8WLxVI"></div>
                <input type="submit" value="Envoyer" id="btn">
            </form>

            <p>
                En cliquant sur envoyer, vous acceptez que vos données soient traitées informatiquement par {{siteName}}.
            
                Pour en savoir plus : <a href="https://www.cnil.fr/fr/reglement-europeen-protection-donnees">Cliquez ici</a>
            </p>


            <button type="button" class="preced" id="pre4" onclick="swa()">Précédent</button>
        </section>
    </div>    

{% endblock %}
{% block scripts %}
    <script src="{{ assets('/assets/js/devis.js') }}"></script>
    <script src="{{ assets('/assets/js/swipe.js') }}"></script>
    <script src="https://www.google.com/recaptcha/api.js" async></script>
{% endblock %}