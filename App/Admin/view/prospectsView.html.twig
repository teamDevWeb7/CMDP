{% extends 'admin.layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ assets('/assets/css/admin/prospects/prospects.css') }}">
    <link rel="stylesheet" href="{{ assets('/assets/css/admin/suppr.css') }}">
{% endblock %}

{% block title %}
    <title>Mes prospects</title>
{% endblock %}

{% block body %}
    <section>
        <h1>Liste des prospects</h1>

        <form>
            <input type="text" id="search" onkeyup="searcher()" placeholder="Rechercher...">
            <div id="azerty"></div>
        </form>

        <p><span>Attention</span> la suppression ou la modification d'un prospect est définitive.</p>

        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>E-mail</th>
                    <th>Numéro</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for prospect in prospects %}
                    <tr>
                        <td>{{prospect.nom}}</td>
                        <td>{{prospect.prenom}}</td>
                        <td>{{prospect.mail}}</td>
                        <td>{{prospect.phone}}</td>
                        <td>
                            <a href="{{path('prospect', {id: prospect.id})}}">Voir</a>
                            <a href="{{path('updateProspect', {id: prospect.id})}}">Modifier</a>
                            <p class="suppress">Supprimer</p>
                            
                        </td>
                    </tr>
                    <section class="suppr agentDormant">
                        <p>Confirmez-vous la suppression du prospect ?</p>
                        <a href="{{path('deleteProspect', {id: prospect.id})}}">Supprimer</a>
                        <button onclick="shutDown(event)">Annuler</button>
                    </section>
                {% endfor %}
            </tbody>
            
        </table>

    </section>


{% endblock %}

{% block scripts %}
    <script src="{{ assets('/assets/js/search.js') }}"></script>
    <script src="{{ assets('/assets/js/suppr.js') }}"></script>
{% endblock %}